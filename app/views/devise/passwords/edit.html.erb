<h2>パスワード再設定</h2>

<section id="new">
  <h2>パスワード再設定する</h2>

  <div class="form">
    <p>パスワードを変更する場合、以下に新しいパスワードを入力してください</p>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
    
      <div class="field">
        <%= f.label :password, "新パスワード" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, class: "new_form", autofocus: true, autocomplete: "new-password" %>
      </div>
    
      <div class="field">
        <%= f.label :password_confirmation, "新パスワードの確認" %><br />
        <%= f.password_field :password_confirmation, class: "new_form", autocomplete: "off" %>
      </div>
    
      <div class="actions">
        <%= f.submit "パスワードを変更する", class: "btn btn-primary" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</section>
