<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <section id="user">
    <h2>Welcome back!</h2>

    <div class="new_image">
      <%= image_tag("Load_ac.jpg") %>
    </div>

    <h2>以下にユーザ情報を入力してください</h2>

    <div class="form">
      <dl>
        <dt><%= f.label :email %><br /><dt>
        <dd><%= f.email_field :email, class: "new_form", autofocus: true, autocomplete: "email" %></dd>
      </dl>
    </div>
  
    <div class="form">
      <dl>
        <dt><%= f.label :password %><br /><dt>
        <dd><%= f.password_field :password, class: "new_form", autocomplete: "current-password" %></dd>
      </dl>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <div class="form">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
    <% end -%>
  
    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links", class: "btn btn-primary"  %>

</section>
